.wrapper#main
  = image_tag("sign.jpg" , class: "icatchImage")
  .signContent
    .signLeftContent
      .signLeftContnetTitleTop Revolution
      .signLeftContnetTitleBottom in Voting
      .signLeftContnetText You can get more understandable information of Voting
    .signRightContent
      .signLeftContentImage
      %h2.hello Hello!
      %p.greeting this is edit secter.if you wanna change your information, please fill in the blanks for using Agola.
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
        = devise_error_messages!
        .field#signName
          = f.label :email
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "field"
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}
        .editfield
          = f.label :password
          %i (leave blank if you don't want to change it)
          %br/
          = f.password_field :password, autocomplete: "new-password", class: "field"
          - if @minimum_password_length
            %br/
            %em
              = @minimum_password_length
              characters minimum
        .editfield
          = f.label :password_confirmation
          %br/
          = f.password_field :password_confirmation, autocomplete: "new-password", class: "field"
        .editfield
          = f.label :current_password
          %i (we need your current password to confirm your changes)
          %br/
          = f.password_field :current_password, autocomplete: "current-password", class: "field"
        .actions
          = f.submit "Update",class: "submit"
      %h3.editcancel Cancel my account if you're Unhappy
      %p.cancel
        #{button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "cancel" ,method: :delete}
      = link_to "Back", :back, class: "back"
